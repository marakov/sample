<% provide(:title, @user.name) %>

<div class="profile">
  <h1><%= @user.name %></h1>
  <h2><%= @user.email %></h2>
  <% if @user.posts.any? %>
    <h3>Microposts (<%= @user.posts.count %>)</h3>
    <ol class="posts">
      <%= render @posts %>
    </ol>
    <%= will_paginate @posts %>
  <% end %>
</div>
