<div class="col-lg-4 col-md-6 col-sm-6 col-xs-12" data-aos="fade-right">
  <div class="col-lg-12 col-xs-12">
    <div id="<%= channel.id %>" class="blog-column">
      <div class="hidden">
        <%= @channel = channel %>
      </div>
      <%= link_to channel.name, channel, class: "channel_name" %>
      <h4><%= channel.category.name %></h4>
      <p class="channel_description"><%= channel.description %></p>
      <%= render "channels/subscribe_form" %>
    </div>
  </div>
</div>
