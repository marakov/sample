<div class="news">
  <h3 class="news__title">News</h3>
  <ul class="news__list">
    <% @feeds.entries.each do |feed| %>
      <li class="news_item">
        <img class="left" src="<%= "#{feed.image}" %>">
        <div class="right">
          <h3>
            <a href="<%= "#{feed.url}" %>">
              <%= "#{feed.title}" %>
            </a>
          </h3>
          <p>
            <%= "#{feed.summary}" %>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</div>

