<div class="header">
  <ul class="menu__list">
    <li class="menu__group">
      <%= link_to "News", feeds_path %>
    </li>
    <li class="menu__group">
      <%= link_to "Help", help_path %>
    </li>
    <% if signed_in? %>
      <li class="menu__group">
        <%= link_to "Profile", current_user %>
      </li>
      <li class="menu__group">
        <%= link_to "Users", users_path %>
      </li>
      <li class="menu__group">
        <%= link_to "Sign out", signout_path, method: "delete" %>
      </li>
      <li class="menu__group">
        <%= link_to "Search channels", channels_path, method: "get" %>
      </li>
    <% else %>
      <li class="menu__group"><%= link_to "Sign in", signin_path %></li>
    <% end %>
  </ul>
</div>
